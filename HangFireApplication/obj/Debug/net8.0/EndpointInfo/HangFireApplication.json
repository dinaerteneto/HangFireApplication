{
  "openapi": "3.0.1",
  "info": {
    "title": "HangFireApplication",
    "version": "1.0"
  },
  "paths": {
    "/api/Job": {
      "get": {
        "tags": [
          "Job"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Job/CriarBackgroundJob": {
      "post": {
        "tags": [
          "Job"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Job/CriarScheduledJob": {
      "post": {
        "tags": [
          "Job"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Job/CriarContinuationJob": {
      "post": {
        "tags": [
          "Job"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Job/CriarRecurringJob": {
      "post": {
        "tags": [
          "Job"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/TaskScheduler/create": {
      "post": {
        "tags": [
          "TaskScheduler"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskSchedulerDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskSchedulerDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TaskSchedulerDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskSchedulerDto": {
        "required": [
          "executablePath",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "executablePath": {
            "minLength": 1,
            "type": "string"
          },
          "arguments": {
            "type": "string",
            "nullable": true
          },
          "cronExpression": {
            "type": "string",
            "nullable": true
          },
          "intervalInMinutes": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "enable": {
            "type": "boolean"
          },
          "dependentTaskId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}